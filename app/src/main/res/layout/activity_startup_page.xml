<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.jennifertran.cse110practice.StartupPage">

    <!-- Instructions Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="You will start the quiz! blah blah blah I am here to fill up space"
        android:id="@+id/instruc_id"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <!-- Subject Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:text="Subject: "
        android:id="@+id/subject_title_id"
        android:layout_below="@+id/instruc_id"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="display subject string"
        android:id="@+id/subject_title_text"
        android:layout_alignTop="@+id/subject_title_id"
        android:layout_toEndOf="@+id/subject_title_id" />

    <!-- Number of Questions -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:text="Number of Questions: "
        android:id="@+id/num_of_questions_text"
        android:layout_below="@+id/subject_title_id"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/num_questions"
        android:id="@+id/num_of_questions_number"
        android:layout_alignTop="@+id/num_of_questions_text"
        android:layout_toEndOf="@+id/num_of_questions_text" />

    <!-- Timer -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:text="Time: "
        android:id="@+id/time_text"
        android:layout_below="@+id/num_of_questions_text"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chronometer"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Time:"
        android:format="MM:SS"
        android:layout_alignTop="@+id/time_text"
        android:layout_toEndOf="@+id/time_text" />

    <!-- Start button -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START"
        android:id="@+id/start_quiz_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="40dp" />

</RelativeLayout>
